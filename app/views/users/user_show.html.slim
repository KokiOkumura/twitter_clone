h1 ユーザー詳細画面
- if current_user == @user
  = link_to "プロフィール編集", edit_profile_users_path(@user)

table.table.table-hover
  tbody
    tr
      th= "名前"
      td = @user.name
    tr
      th = "自己紹介文"
      td =  simple_format(@profile_text)
    tr
      th = "プロフィール画像"
      - if @user.image.attached?
        td = image_tag @user.image
      - else
        td = "未設定です"  
      

= link_to '戻る', home_top_path, class: "btn btn-primary"
- if current_user == @user
  = link_to '退会', withdraw_users_path, method: :patch, data: { confirm: "本当に退会してよろしいですか？"}, class: "btn btn-danger ms-3"

